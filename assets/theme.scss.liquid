// Sans Family Vars
{% assign sans_family = settings.sans_font_family %}

{{ sans_family | font_face }}

{%- assign sans_family_bold = sans_family | font_modify: 'weight', 'bolder' -%}
{%- assign sans_family_italic = sans_family | font_modify: 'style', 'italic' -%}
{%- assign sans_family_bold_italic = sans_family_bold | font_modify: 'style', 'italic' -%}

{{ sans_family_bold | font_face }}
