// Sans Stack
$font-stack-sans: {{ sans_family.family }}, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
$font-style-sans: {{ sans_family.style }};
$font-weight-sans: {{ sans_family.weight | default: 400 }};
$font-weight-sans-bold: {{ sans_family_bold.weight | default: 700 }};

// Serif Family Vars
{% assign serif_family = settings.serif_font_family %}

{{ serif_family | font_face }}

{%- assign serif_family_bold = serif_family | font_modify: 'weight', 'bolder' -%}
{%- assign serif_family_italic = serif_family | font_modify: 'style', 'italic' -%}
{%- assign serif_family_bold_italic = serif_family_bold | font_modify: 'style', 'italic' -%}

{{ serif_family_bold | font_face }}
{{ serif_family_italic | font_face }}
{{ serif_family_bold_italic | font_face }}

// Serif Stack
$font-stack-serif: {{ serif_family.family }}, "Georgia", Times, Serif;
$font-style-serif: {{ serif_family.style }};
$font-weight-serif: {{ serif_family.weight | default: 400 }};
$font-weight-serif-bold: {{ serif_family_bold.weight | default: 700 }};

// Template Overrides via customise options
body {
  font-family: $font-stack-sans;
  background-color: {{ settings.body_background_colour }};
  color: {{ settings.body_text_colour }};
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-stack-sans;
}

.rich-text {
  font-family: $font-stack-serif;
}

.header .main-nav,
.search-form {
  background: {{ settings.nav_background_colour }};
  color: {{ settings.nav_text_colour }};
}

.header .main-nav a {
  color: {{ settings.nav_text_colour }};
}

.trigger-nav a:hover,
.main-nav a:hover {
  color: {{ settings.nav_text_hover_colour }};
}

.newsletter {
  background: {{ settings.newsletter_background_colour }};
}

.footer {
  background: {{ settings.footer_background_colour }};
}

input[type=submit], button, .button  {
  background: {{ settings.button_colour }};
  color: {{ settings.button_text_colour }};
}

input[type=submit]:hover,  button:hover, .button:hover  {
  background: {{ settings.button_hover_colour }};
  color: {{ settings.button_hover_text_colour }};
}

.features .call-to-action {
  border-color: {{ settings.button_hover_colour }};
  color: {{ settings.button_hover_colour }} ;
}

.features .call-to-action:hover {
  border-color: {{ settings.button_hover_colour }};
  background: {{ settings.button_hover_colour }};
}

#cookies-eu-banner {
  background: {{ settings.cookies_background_colour }};
  color: {{ settings.cookies_text_colour }};
}

// Stockists Page
.stockists-page .rich-text .upper {
  text-transform: uppercase;
  font-family: $font-stack-sans;
  font-weight: $font-weight-sans-bold;
}
